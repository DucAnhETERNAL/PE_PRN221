@page
@model BookWeb.Pages.BookListModel
@{
    ViewData["Title"] = "Book List";
}

<style>
    table.table {
        background-color: #ffe6f2; /* Light pink background for the table */
        border-color: #ffb3c6; /* Light pink border */
    }

        table.table th {
            background-color: #ffb3c6; /* Slightly darker pink for header */
            color: white;
        }

        table.table td {
            background-color: #ffe6f2; /* Light pink for table cells */
        }

    .btn-primary {
        background-color: #d63384; /* Pink button color */
        border-color: #d63384;
    }

        .btn-primary:hover {
            background-color: #c2185b; /* Darker pink for hover effect */
            border-color: #c2185b;
        }
</style>

<h2>Available Books</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Category</th>
            <th>Price ($)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.BookName</td>
                <td>@book.Category.CategoryName</td>
                <td>@book.Price</td>
                <td>
                    <a asp-page="/Customer/OrderBook" asp-route-id="@book.BookID" class="btn btn-primary">Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>
