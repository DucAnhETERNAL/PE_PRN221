<Window x:Class="BookWPFApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookWPFApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Border Background="White" Padding="20" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <StackPanel>
                <TextBlock Text="Book Store Login" FontSize="24" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username" Margin="0,5,0,2" />
                <TextBox x:Name="UsernameTextBox" Width="300" Height="30" Margin="0,0,0,10" />

                <TextBlock Text="Password" Margin="0,5,0,2" />
                <PasswordBox x:Name="PasswordBox" Width="300" Height="30" Margin="0,0,0,20" />

                <Button Content="Login" Width="300" Height="35" Background="Blue" Foreground="White" FontWeight="Bold" Click="LoginButton_Click" />
                <TextBlock x:Name="MessageTextBlock" Margin="0,10,0,0" Foreground="Red" HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
